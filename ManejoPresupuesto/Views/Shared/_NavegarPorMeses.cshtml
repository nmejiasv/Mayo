@model DateTime

<h4>
    <a asp-route-mes="@ViewBag.mesAnterior" asp-route-año="@ViewBag.AñoAnterior"
    class="btn btn-secundary"><i class="bi-chevron-left" ></i></a>

    @Model.ToString("MMM")-@Model.Year

    <a asp-route-mes="@ViewBag.mesPosterior" asp-route-año="@ViewBag.mesPosterior"
    class="btn btn-secundary"><i class="bi-chevron-right" ></i></a>
</h4>