
@{
    ViewData["Title"] = "Excel Reporte";
    var hoy = DateTime.Today;
    var haceUnMes = hoy.AddMonths(-1);
    var mesActual = hoy.Month;
    var añoActual = hoy.Year;
    var mesAnterior = haceUnMes.Month;
    var añoAnteriorAño = haceUnMes.Year;
    var añoAnterior = añoActual - 1;
}

<partial name="_Submenu" Model="SubMenuTransacciones.Excel"  />

<h1>Exportar Transacciones a Excel</h1>

<div class="mb-3">
    <a asp-action="ExportarExcelPorMes" asp-route-mes="@mesActual" 
    asp-route-año="@añoActual"
        class="btn btn-success">
        Exportar mes Actual
    </a> ~ @hoy.ToString("MMMM yyyy")
</div>

<div class="mb-3">
    <a asp-action="ExportarExcelPorMes" asp-route-mes="@mesAnterior" 
